<html>
<head>
    <script src="/public/js/jquery-1.9.1.min.js"></script>
    <head>
<body>
<div>
    Stock in Redis: {{ res.redisStock }}
    <br>
    Stock in MySql: {{ res.mysqlStock }}
</div>
<div>
    <button id="init">Init</button>&nbsp;&nbsp;<button id="buy">Buy</button>
</div>
<script>
  $("#init").on("click", (e) => {
    $.ajax({
      url: "/seckill/init",
      success: function (data) {
        window.location.reload();
      },
      error: function (result) {
      }
    });
  })

  $("#buy").on("click", (e) => {
    $.ajax({
      url: "/seckill/buy",
      success: function (data) {
        window.location.reload();
      },
      error: function (result) {
      }
    });
  })
</script>
</body>
</html>